// TODO: maybe add this as inline style?
<% 1.upto(604) do |i| %>
@font-face {
  font-family: 'p<%= i %>-v2';
  src: local(QCF2001),
  font-url("quran_fonts/v2/QCF2<%= i.to_s.rjust(3, '0') %>.woff2") format('woff2'),
  font-url("quran_fonts/v2/QCF2<%= i.to_s.rjust(3, '0') %>.woff") format('woff');
  font-display: block;
}
.p<%= i %>-v2{
  font-family: 'p<%=i%>';
}

@font-face {
  font-family: 'p<%= i %>-v1';
  src: url("quran_fonts/v1/woff/p<%=i%>.woff"),
  font-url("quran_fonts/v1/ttf/<%= i %>.ttf") format('truetype');
}

.p<%= i %>-v2{
  font-family: 'p<%=i%>-v2';
}

.p<%= i %>-v1{
  font-family: 'p<%=i%>-v1';
}
<% end %>


