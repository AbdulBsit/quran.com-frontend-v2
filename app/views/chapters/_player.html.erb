<div id="player">
  <div class="container">
    <div class="audio-left-col">
      <ul class="d-flex align-items-center justify-content-between">
        <li>
          <button class="previous-btn"><i class="fa fa-to-start"></i></button>
        </li>

        <li class="play-ctrls play">
          <button class="play-btn">
            <i class="fa fa-play"></i>
          </button>
          <button class="pause-btn">
            <i class="fa fa-pause"></i>
          </button>
          <div class="loading"></div>
        </li>

        <li>
          <button class="next-btn"><i class="fa fa-to-end"></i></button>
        </li>

        <li>
          <button class="repeat-btn"><i class="fa fa-loop"></i></button>
          <div class="repeat-popover-container" style="display:none;">
            <div class="repeat-popover-title text-center mt-1">
              <div class="custom-control custom-switch">
                <input type="checkbox" class="custom-control-input" id="repeat-popover-switch">
                <label class="custom-control-label" for="repeat-popover-switch">REPEAT</label>
              </div>
            </div>
            <div class="repeat-popover-content">
              <div class="repeat-popover-content-disable-overlay">
              </div>
              <ul class="nav nav-pills mb-3 text-center" id="repeat-popover-pills-tab" role="tablist">
                <li class="nav-item w-50">
                  <a class="nav-link active" id="repeat-popover-pills-single-tab" data-toggle="pill" href="#repeat-popover-pills-single-content" role="tab" aria-selected="true">Single</a>
                </li>
                <li class="nav-item w-50">
                  <a class="nav-link" id="repeat-popover-pills-range-tab" data-toggle="pill" href="#repeat-popover-pills-range-content" role="tab" aria-selected="false">Range</a>
                </li>
              </ul>
              <div class="tab-content" id="pills-tabContent">
                <div id="repeat-popover-pills-single-content" class="tab-pane fade show active" role="tabpanel" aria-labelledby="repeat-popover-pills-single-tab">
                  <div class="text-center h6">
                    Each Ayah
                  </div>
                  Repeat:
                  <select id="repeat-popover-single-repeat" class="form-control repeat-popover-repeat-value">
                    <option value="2" selected>2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                    <option value="loop">loop</option>
                  </select>
                </div>
                <div id="repeat-popover-pills-range-content" class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="repeat-popover-pills-range-tab">
                  <div class="row">
                    <div class="col-6">
                      From:
                      <select id="repeat-popover-range-from" class="form-control">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                      </select>
                    </div>
                    <div class="col-6">
                      To:
                      <select id="repeat-popover-range-to" class="form-control">
                        <option value="2">2</option>
                        <option value="3">3</option>
                      </select>
                    </div>
                  </div>
                  Repeat:
                  <select id="repeat-popover-range-repeat" class="form-control repeat-popover-repeat-value">
                    <option value="2" selected>2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                    <option value="loop">loop</option>
                  </select>
                </div>
              </div>
            </div>
          </div>
        </li>

        <li>
          <button class="auto-scroll-btn active"><i class="fa fa-link"></i></button>
        </li>

        <li class="text-primary timer">00:00</li>

        <li class="lg-audio">
          <div class="bar">
            <div class="progress"></div>
          </div>
        </li>

        <li class="lg-vol">
          <button><i class="fa fa-volume-up text-primary"></i></button>
        </li>

        <li class="dropdown">
          <a class="dropdown-toggle" href="#" data-toggle="dropdown" aria-expanded="false">
            <%= @presenter.chapter.name_complex %>
          </a>

          <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; transform: translate3d(0px, 24px, 0px); top: 0px; left: 0px; will-change: transform;">
            <% Chapter.find_each do |chapter| %>
              <div class="dropdown-item <%= 'active' if chapter.id == @presenter.chapter.id %>">
                <%= link_to chapter.name_simple, chapter_path(chapter) %>
              </div>
            <% end %>
          </div>
        </li>

        <li class="dropdown dropdown-verse">
          <% current_verse = @presenter.paginate.first.verse_number %>

          <a class="dropdown-toggle" href="#" data-toggle="dropdown" aria-expanded="false">Verse <%= current_verse %></a>

          <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; transform: translate3d(0px, 24px, 0px); top: 0px; left: 0px; will-change: transform;">
            <% 1.upto(@presenter.chapter.verses_count) do |verse| %>
              <div class="dropdown-item <%= 'active' if verse == current_verse %>" data-verse="<%= verse %>">
                <%= link_to "Verse #{verse}", range_path("#{@presenter.chapter.chapter_number}/#{verse}") %>
              </div>
            <% end %>
          </div>
        </li>
      </ul>
    </div>
  </div>
</div>