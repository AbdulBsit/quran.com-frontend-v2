<section id="chapter-info">
  <div class="container alert alert-dismissible fade show" role="alert">
    <ul class="d-flex align-items-center info-heading">
      <li><h1>About Surah Al-Fatihah</h1></li>
      <li><%= _t("chapters.verses") %> <span>7</span></li>
      <li><%= _t("chapters.pages") %> <span>1-1</span></li>

      <li class="ml-auto">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <i class="fa fa-close"></i> <%= _t("close") %>
        </button>
      </li>
    </ul>

    <div class="surah-info-area">
      <div class="row">
        <div class="col-md-4 order-1">
          <div class="img-col">
            <%= image_tag 'makha.jpg', alt: 'Makkah', class: 'img-fluid' %>
          </div>
        </div>

        <div class="col-md-8 order-2">
          <div class="text-col <%= I18n.locale %>">
            <%= @presenter.info.text.html_safe %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
