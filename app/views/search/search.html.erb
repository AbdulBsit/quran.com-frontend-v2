<% content_for :header do %>
  <div class="head-center">
    <%= render 'shared/search_form', expanded: true %>
  </div>
<% end %>

<%= render 'pagination' %>

<div class="container">
  <div id="verses" data-controller="slim-scroller infinite-page chapter">
    <%= render partial: 'item', collection: @presenter.items, as: :item %>

    <div class="text-center" id="verses_pagination" data-url="<%= search_path(q: @presenter.query, page: @presenter.next_page) %>">
      <% if @presenter.next_page %>
        <%= link_to 'load more', search_path(q: @presenter.query, page: @presenter.next_page), rel: 'next' %>
      <% end %>
    </div>
  </div>
</div>
